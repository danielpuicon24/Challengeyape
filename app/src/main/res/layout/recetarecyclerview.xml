<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/yape"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        android:layout_margin="-2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/minium"
        android:background="@color/white"
        app:cardMaxElevation="@dimen/cardbroder"
        app:cardCornerRadius="14dp"
        app:cardElevation="4dp"
        android:layout_margin="@dimen/cardbroder">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgReceta"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
               android:layout_gravity="center"
                android:layout_marginStart="4dp"
                >

                <!-- Nombre del producto -->
                <TextView
                    android:id="@+id/txtNombreReceta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre de la Receta"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:textSize="@dimen/title"
                    android:ellipsize="end" />

                <!-- Descripción del producto (primeras 10 palabras) -->
                <TextView
                    android:id="@+id/txtDescripcionReceta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción de la Receta..."
                    android:maxLines="2"
                    android:textSize="@dimen/minium"
                    android:ellipsize="end" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/rating_star" />

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/rating_star" />

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/rating_star" />

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/rating_star" />

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/rating_star" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>



    </androidx.cardview.widget.CardView>
</FrameLayout>